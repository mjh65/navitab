{
    "version": 4,
    "configurePresets": [
        {
            "name": "common",
            "hidden": true,
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/install"
            }
        },
        {
            "name": "release",
            "inherits": "common",
            "displayName": "Release build",
            "description": "Configure for release build using makefiles and default compiler",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "debug",
            "inherits": "common",
            "displayName": "Debug build",
            "description": "Configure for debug build using makefiles and default compiler",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "xcode-debug",
            "inherits": "common",
            "displayName": "Debug (Xcode)",
            "description": "Configure for debug build using Xcode IDE",
            "generator": "Xcode",
            "cacheVariables": {
              "CMAKE_BUILD_TYPE": "Debug"
            },
            "condition": {
              "type": "equals",
              "lhs": "${hostSystemName}",
              "rhs": "Darwin"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "all-release",
            "displayName": "Release versions of all Navitab products",
            "configurePreset": "release",
            "configuration": "Release"
        },
        {
            "name": "all-debug",
            "displayName": "Debuggable versions of all Navitab products",
            "configurePreset": "debug",
            "configuration": "Debug"
        },
        {
            "name": "desktop-xcode-debug",
            "displayName": "Debuggable version of Navitab desktop apps and tools",
            "configurePreset": "xcode-debug",
            "configuration": "Debug",
            "targets": ["navitab_desktop", "navitab_db_builder"],
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        }
    ]
}